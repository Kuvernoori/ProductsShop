@page
@model IndexModel

<h2>Products</h2>

<a asp-page="Create">Create New</a>

<table>
    <thead>
    <tr><th>Name</th><th>Price</th><th>Category</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach (var p in Model.Products)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td>@p.Category</td>
            <td>
                <a asp-page="Edit" asp-route-id="@p.Id">Edit</a> |
                <a asp-page="Delete" asp-route-id="@p.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>